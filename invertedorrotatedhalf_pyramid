public static void invertedorrotatedhalf_pyramid() {
    for(int i=1;i<=4;i++){
        for(int j=1;j<=4-i;j++){
            System.out.print(" ");
        }
        for(int j=1;j<=i;j++){
            System.out.print("*");
        }
        System.out.println();
    }
    
}
    public static void main(String[] args) {
   
    invertedorrotatedhalf_pyramid();
    }
}
// it print this half pyramid
   *
  **
 ***
****
